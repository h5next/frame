# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript
[*.js]
indent_style = space
indent_size = 4

# Styles
[*.css]
indent_style = space
indent_size = 2

# Html
[*.html]
indent_style = space
indent_size = 2

# MarkDown
[*.md]
trim_trailing_whitespace = false
